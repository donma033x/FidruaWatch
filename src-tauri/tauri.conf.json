{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FidruaWatch",
  "version": "1.2.0",
  "identifier": "com.fidrua.watch",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "title": "FidruaWatch - 文件监控工具",
        "width": 480,
        "height": 720,
        "resizable": true,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "dialog": {
      "all": true
    }
  }
}
